{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Debug Project",
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "build debug executable",
            "program": "${workspaceFolder}/superMarco_debug",
            "stdio": [
                "${workspaceFolder}/spec-M.txt", // redirect stdin
                null, // redirect stdout
                null // redirect stderr
            ],
            "args": ["./superMarco","-q", "-o","L"],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "postDebugTask": "clean workspace"
        },
    ]
}